/** Fonts */
@font-face {
    font-family: FiraCode-SemiBold;
    src: url(../fonts/FiraCode-SemiBold.ttf);
}

/** Animations **/
@keyframes landingAnimation {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes blinkingAnimation {
    to {
        visibility: hidden;
    }
}

#Layer_1 {
    animation: 0.5s ease-in 0s 1 landingAnimation;
}

#dash {
    animation: blinkingAnimation 1s steps(2, start) infinite;
}

/** Styling **/
h1 {
    margin-bottom: 10px !important;
}

#nav a {
    text-decoration: none;
    color: black;
}

#nav a:hover {
    color: darkgrey;
}

#contact-content {
    font-size: x-large;
}

.divider {
    width: 10vw;
    margin-bottom: 30px;
    border: 1px solid goldenrod;
}

.get-in-touch-btn {
    color: white;
    background-color: black;
    padding: 7px;
    font-family: "FiraCode-SemiBold";
    font-size: 1.5em;
    text-decoration: none;
}

.get-in-touch-btn:hover {
    color: yellow;
}

.landing-animation {
    animation: 0.5s ease-in 0s 1 landingAnimation;
}

.project-div-hover {
    opacity: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: opacity 0.5s ease;
}

.project-screenshot {
    opacity: 1;
    width: 100%;
    height: 100%;
    transition: opacity 0.2s ease;
    object-fit: contain;
}

.project-link:hover .project-screenshot {
    opacity: 0.3;
}

.project-link:hover .project-div-hover {
    opacity: 1;
}

/** Laptops/Desktops */
@media (min-width: 481px) {
    #nav {
        position: fixed;
        z-index: 999;
        right: 0;
        margin-top: 10px;
        margin-right: 10px;
    }

    #nav ul {
        display: flex;
        flex-direction: row;
    }

    #nav li {
        list-style: none;
        margin-right: 10px;
        margin-left: 10px;
    }

    #Layer_1 {
        width: 50vw;
    }

    .landing-section {
        height: 100vh;
    }

    .avatar-img {
        border-radius: 50%;
        width: 10vw;
    }

    .social-media-img {
        width: 7vw;
        margin-right: 10px;
        margin-left: 10px;

        transition: opacity 0.15s;
    }

    .social-media-link {
        background-color: white;
    }

    .social-media-link:hover .social-media-img {
        opacity: 0.5;
    }

    .main-body {
        margin-bottom: 100px;
    }

    .content-container {
        margin-top: 10vh;
        margin-left: 10vw;
        margin-right: 10vw;
    }

    .content-container section {
        margin-bottom: 100px;
    }

    .content-container h1 {
        margin-bottom: 25px;
    }

    .skills-div {
        width: 600px;
    }

    .skills-div > * {
        margin: 5px;
    }

    .skill-img {
        height: 5vw;
    }

    .projects-div > * {
        margin: 10px;
    }

    .project-div {
        position: relative;
        width: 20vw;
        height: 13vw;
        background-color: aliceblue;
    }

    .break {
        height: 50px;
    }

    .break-sm {
        height: 25px;
    }

    .projects-group {
        width: 20vw;
    }

    .projects-btn-label {
        background-color: lightgrey;
        padding: 10px;
        width: 10vw;
        transition: background-color 0.2s ease;
        text-align: center;
    }

    .projects-btn:checked + .projects-btn-label {
        background-color: grey;
    }

    .projects-btn-label:hover {
        background-color: rgb(238, 238, 238);
        cursor: pointer;
    }

    .projects-container {
        width: 80vw;
    }

    footer {
        height: 100px;
        background-color: #0d001c;
    }

    .anchor-point {
        position: absolute;
        margin-top: -90vh;
    }

    .contact-form {
        width: 50vw;
    }

    .contact-message {
        word-break: break-all;
    }
}

/** Mobile devices */
@media (max-width: 480px) {
    #nav {
        position: fixed;
        display: flex;
        display: none;
        justify-content: center;
        bottom: 0;
        width: 100vw;
    }

    #nav #mobile-btn {
        height: 20vw;
        width: 20vw;
        border-radius: 50%;
        background-color: blue;
        transform: translate(0, 50%);
    }

    #nav ul {
        background-color: grey;
        margin: 0;
        padding: 0;
        padding-top: 10vw;
        padding-bottom: 5vw;
    }

    #nav li {
        width: 100vw;
        text-align: center;
        list-style: none;
    }

    #Layer_1 {
        width: 85vw;
    }

    .landing-section {
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        height: 100vh;
    }

    .avatar-img {
        border-radius: 50%;
        width: 40vw;
    }

    .social-media-div {
        display: flex;
        justify-content: center;
        flex-direction: row;
    }

    .social-media-img {
        width: 20vw;
        margin-right: 10px;
        margin-left: 10px;

        transition: opacity 0.15s;
    }

    .social-media-link {
        background-color: white;
    }

    .social-media-link:hover .social-media-img {
        opacity: 0.5;
    }

    .main-body {
        margin-bottom: 100px;
    }

    .content-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-left: 5vw;
        margin-right: 5vw;
    }

    .content-container section {
        margin-bottom: 100px;
    }

    .content-container h1 {
        margin-bottom: 25px;
    }

    .skills-div {
        width: 300px;
    }

    .skills-div > * {
        margin: 5px;
    }

    .skill-img {
        height: 7vw;
    }

    .projects-div > * {
        margin: 10px;
    }

    .project-div {
        width: 75vw;
        height: 50vw;
        background-color: aliceblue;
    }

    .break {
        height: 25px;
    }

    .break-sm {
        height: 12.5px;
    }

    .project-div-hover {
        display: none;
    }

    .school-div {
        padding: 10px;
    }

    .column-filler-div {
        display: none;
    }

    .projects-btn-label {
        background-color: lightgrey;
        padding: 10px;
        width: 30vw;
        transition: background-color 0.2s ease;
        text-align: center;
    }

    .projects-btn:checked + .projects-btn-label {
        background-color: grey;
    }

    .projects-btn-label:hover {
        background-color: rgb(238, 238, 238);
        cursor: pointer;
    }

    /* .anchor-point {
    position: absolute;
    margin-top: -90vh;
  } */

    .contact-form {
        width: 80vw;
    }

    .contact-message {
        word-break: break-all;
    }

    footer {
        height: 100px;
        background-color: #0d001c;
    }
}
